<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="230.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coen275ecommerce.ProductController">
    <ImageView fx:id="productImage" fitHeight="134.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
        <Image url="@../../../img/electronic/iphone14pro.png" />
    </ImageView>

    <VBox alignment="CENTER_RIGHT" prefHeight="96.0" prefWidth="200.0">
<!--        <VBox.margin>-->
<!--            <Insets>-->
<!--                <top>20</top>-->
<!--            </Insets>-->
<!--        </VBox.margin>-->
        <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" prefWidth="200" text="brand" wrapText="true">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Label fx:id="description" alignment="CENTER" contentDisplay="CENTER" prefWidth="200" text="name" textAlignment="CENTER" />
        <Label fx:id="price" alignment="CENTER" contentDisplay="CENTER" prefWidth="200" text="description" textAlignment="CENTER" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label alignment="CENTER" text="available: ">
               <HBox.margin>
                  <Insets right="1.0" />
               </HBox.margin></Label>
            <Label fx:id="quantity" text="50" />
         </children>
      </HBox>
        <Button fx:id="addToCartButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" prefHeight="20.0" prefWidth="20.0">
            <VBox.margin>
                <Insets>
                    <right>10</right>
                </Insets>
            </VBox.margin>
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../img/icons/addToCart.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </VBox>

</VBox>
